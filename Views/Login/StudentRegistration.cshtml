@model TheFinalProduct_FYP_.db_fypManagement.tblStudents

@{
    ViewBag.Title = "Student &nbsp Registration";
    Layout = "~/Views/Layouts/_StudentLogin.cshtml";
}

<h2>Student Registration</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Fill in All Details</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h5 style="margin-bottom:15px;margin-top:15px">First Name</h5>
            <div class="col-md-12">
                @Html.EditorFor(model => model.studentFname, new { htmlAttributes = new { @class = "form-control" }, @data_val = "true", @required = "required" })
                @Html.ValidationMessageFor(model => model.studentFname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5 style="margin-bottom:15px;margin-top:15px">Last Name</h5>
            <div class="col-md-12">
                @Html.EditorFor(model => model.studentLname, new { htmlAttributes = new { @class = "form-control", @data_val = "true", @required = "required" } })
                @Html.ValidationMessageFor(model => model.studentLname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5 style="margin-bottom:15px;margin-top:15px">Father's Name</h5>
            <div class="col-md-12">
                @Html.EditorFor(model => model.studentPname, new { htmlAttributes = new { @class = "form-control", @data_val = "true", @required = "required" } })
                @Html.ValidationMessageFor(model => model.studentPname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5 style="margin-bottom:15px;margin-top:15px">Email Address</h5>
            <div class="col-md-12">
                @Html.EditorFor(model => model.studentEmail, new { htmlAttributes = new { @class = "form-control" , Type = "email", @data_val = "true", @required = "required" } })
                @Html.ValidationMessageFor(model => model.studentEmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5 style="margin-bottom:15px;margin-top:15px">Set A Password</h5>
            <div class="col-md-12">
                @Html.EditorFor(model => model.studentPassword, new { htmlAttributes = new { @class = "form-control" , Type = "password", @data_val = "true", @required = "required" } })
                @Html.ValidationMessageFor(model => model.studentPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5 style="margin-bottom:15px;margin-top:15px">Date of Birth</h5>
            <div class="col-md-12">
                <input type="date" class="datepicker datepicker-custom" name="DateOfBirth" required/>
                @Html.ValidationMessageFor(model => model.studentDOB, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">
                <input type="submit" value="Register" class="btn btn-success btn-lg" />
                @if (ViewBag.Message != null)
                {
                    <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
                    </script>

                }
            </div>
        </div>
    </div>
}



<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
