@model TheFinalProduct_FYP_.db_fypManagement.tblStudents

@{
    ViewBag.Title = "StdLogin";
    Layout = "~/Views/Layouts/_StudentLogin.cshtml";
}
<style>
    .modal-content {
        width: 500px;
        height: 500px;
    }
</style>
<h2>Student Login</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
  
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
          <h5 style="margin-bottom:15px">Enter Your Email</h5>
            <div class="col-md-12">
                @Html.EditorFor(model => model.studentEmail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.studentEmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5 style="margin-bottom:15px;margin-top:15px">Enter Your Password</h5>
            <div class="col-md-12">
                @Html.EditorFor(model => model.studentPassword, new { htmlAttributes = new { @class = "form-control", Type = "password" } })
                @Html.ValidationMessageFor(model => model.studentPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">
                <input type="submit" value="Sign In" id="btnShowModal" class="btn btn-success btn-lg" />
                @if (ViewBag.Message != null)
                {
                    <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
                    </script>

                }
                <a href="@Url.Action("StudentRegistration","Login")"><input type="button" value="Register Now" id="btnShowModal" class="btn btn-primary btn-lg" /></a>

            </div>
        </div>
    </div>
}

<div class="modal fade" tabindex="-1" id="loginModal"
     data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <h2 style="font-family:'Franklin Gothic'">Welcome @Session["studentFname"] @Session["studentLname"]</h2>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary button button4">Thanks</button>
                
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js">

</script>
<script src="bootstrap/js/bootstrap.min.js"></script>

<script type="text/javascript">

    $(document).ready(function () {
        $("#btnShowModal").click(function () {
            $("#loginModal").modal('show');
        });

        $("#btnHideModal").click(function () {
            $("#loginModal").modal('hide');
        });
        $("#sendinvite").click(function () {
            alert("Invite Sent Successfully!");
            $("#loginModal").modal('hide');


        });
    });
</script>

