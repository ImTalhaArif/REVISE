@model TheFinalProduct_FYP_.db_fypManagement.tblSupervisorProjects

@{
    ViewBag.Title = "Supervisor Projects";
    Layout = "~/Views/Layouts/_SupervisorEmpty.cshtml";
}


@using (Html.BeginForm("SupervisorProjects", "Project", FormMethod.Post, new { enctype = "multipart/Form-data" }))
{


    <div class="form-horizontal">
        <h4>Supervisor Projects</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h5>Project Name</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.spName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.spName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <h5 style="margin-bottom:15px;margin-top:15px">Project Proposal</h5>
            <div class="col-md-12">
                <input type="file" name="file" required />
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create Project" onclick="success()" class="btn btn-info btn-lg" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="@Url.Action("Projects","Supervisor")"><input value="My Projects" type="button" class="btn btn-info btn-sm" style="margin-left: 1400px" /></a>
            </div>
        </div>
    </div>
}
<script>
    function success() {
        alert("New Project Created Successfully!!!");
    }
</script>


