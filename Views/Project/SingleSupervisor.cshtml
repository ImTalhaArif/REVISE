
@{
    ViewBag.Title = "SingleSupervisor";
    Layout = "~/Views/Layouts/_EmptyLayout.cshtml";
}

<h2>Supervisor Details</h2>
@using (Html.BeginForm())
{

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 card">
            @foreach (var su in ViewData["single"] as IEnumerable<TheFinalProduct_FYP_.db_fypManagement.tblSupervisors>)
            {
                <h3>@su.supervisorName</h3>
                <hr />
                <h4>Domain: @su.supervisorDomain</h4>
                <hr />
                <h5>Email Address: @su.supervisorEmail</h5>
                <hr />
                <h3>Supervisor Projects:</h3>
                <ul>
                    @foreach (var sa in ViewData["projects"] as IEnumerable<TheFinalProduct_FYP_.db_fypManagement.tblSupervisorProjects>)
                    {
                        <li>
                            <div class="col-md-3">
                                <h6>Name Of Project: @sa.spName</h6>
                                <h6>Date Created: @sa.spDate</h6>
                                <a href="~/SupervisorProjects/@sa.spFile">Download</a>
                            </div>
                        </li>
                    }
                    </ul>
                    <input type="hidden" value="@su.supervisorID" name="id" />

                    <button type="submit" class="btn btn-lg btn-info" value="@su.supervisorName" name="send">Send Supervision Request</button>
            }
            </div>
    </div>
</div>
}
