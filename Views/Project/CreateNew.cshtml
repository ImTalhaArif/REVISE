@model TheFinalProduct_FYP_.db_fypManagement.tblProjects

@{
    ViewBag.Title = "CreateNew";
    Layout = "~/Views/Layouts/_EmptyLayout.cshtml";
}

<h2>Create A New Project</h2>

@using (Html.BeginForm("CreateNew", "Project", FormMethod.Post, new { enctype = "multipart/Form-data" }))
{


    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h5 style="margin-bottom:15px;margin-top:15px">Name Your Project</h5>
            <div class="col-md-12">
                @Html.EditorFor(model => model.projectName, new { htmlAttributes = new { @class = "form-control", @data_val = "true", @required = "required" } })
                @Html.ValidationMessageFor(model => model.projectName, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <h5 style="margin-bottom:15px;margin-top:15px">Project Proposal</h5>
            <div class="col-md-12">
                <input type="file" name="file" required/>
            </div>
            <br />
            <textarea class="form-control ml-2" style="width:1600px" name="scope" placeholder="Write Scope Of Project" required></textarea>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">
                <input type="submit" value="Create Project" class="btn btn-success btn-lg" onclick="success()" />
                @if (ViewBag.Message != null)
                {
                    <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
                    </script>

                }
            </div>
        </div>
    </div>
}


