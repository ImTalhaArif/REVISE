
@{
    ViewBag.Title = "ATaskSubmission";
    Layout = "~/Views/Layouts/_EmptyAdmin.cshtml";
}

<h2>Admin Task Submission</h2>
<div class="container-fluid">
    <h4> Task Only to be Submitted by Group Leader</h4>
    <div class="row">

        <div class="col-md-10 card">
            @using (Html.BeginForm("ATaskSubmission", "Groups", FormMethod.Post, new { enctype = "multipart/Form-data" }))
            {
            <div class="col-md-4 p-4">
                <input type="file" name="file" value="Your File" />
                <input type="submit" value="Submit" onclick="success()" class="btn btn-success" />
            </div>
                    }

        </div>

    </div>

</div>
<script>
    function success() {
        alert("Task Submitted Successfully!!!");
    }
</script>
