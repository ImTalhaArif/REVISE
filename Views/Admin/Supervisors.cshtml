@model IEnumerable<TheFinalProduct_FYP_.db_fypManagement.tblSupervisors>
@{
    ViewBag.Title = "Supervisors";
    Layout = "~/Views/Layouts/_EmptyAdmin.cshtml";
}
@using (Html.BeginForm("Supervisors", "Admin", FormMethod.Get))
{

    <h2>Supervisors</h2>
    <div style="float:right;"> @Html.TextBox("searchingg")<input type="submit" value="search" class="btn  btn-info ml-2" /></div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Supervisor Name
                </th>
                <th>
                    Supervisor Email
                </th>
                <th>
                    Supervisor Domain
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td>
                        No Results Found
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.supervisorName
                        </td>
                        <td>
                            @item.supervisorEmail
                        </td>
                        <td>
                            @item.supervisorDomain
                        </td>
                        <td>
                            @using (Html.BeginForm())
                            {
                                <button class="btn btn-info" name="details" value="@item.supervisorName"> View Details </button>
                                <button class="btn btn-danger" name="name" onclick="sure()" value="@item.supervisorEmail"> Delete Supervisor </button>
                            }
                        </td>
                    </tr>


                }
            }

        </tbody>
    </table>

    <button class="btn btn-info" type="button" data-toggle="modal" data-target="#exampleModal">Add New Supervisor</button>




    using (Html.BeginForm())
    {



        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title" id="exampleModalLabel">Add New Supervisor</h3>
                    </div>
                    <div class="modal-body">
                        <span>Supervisor Name: </span> <input type="text" class="form-control" name="sname" />
                        <span>Supervisor Email: </span> <input type="email" class="form-control" name="email" />
                        <span>Supervisor Password: </span> <input type="password" class="form-control" name="password" />
                        <span>Supervisor Domain: </span> <input type="text" class="form-control" name="domain" />
                    </div>
                    <div class="modal-footer">
                        <button type="submit" name="desc" onclick="success()" value="proceed" class="btn btn-secondary">Add</button>

                    </div>
                </div>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    }
    <script>

        function success() {
            alert("Supervisor Added Successfully");
        }
        function sure() {
            alert("Are you sure??");
        }
    </script>
}