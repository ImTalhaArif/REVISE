@model IEnumerable<TheFinalProduct_FYP_.db_fypManagement.tblStudents>
@{
    ViewBag.Title = "Students";
    Layout = "~/Views/Layouts/_EmptyAdmin.cshtml";
}

<h2>Students</h2>
@using (Html.BeginForm("Students","Admin", FormMethod.Get))
{
<div style="float:right;"> @Html.TextBox("searching")<input type="submit" value="search" class="btn  btn-info ml-2" /></div>
   
<table class="table">
    <thead>
        <tr>
            <th>
                Student Name
            </th>
            <th>
                Father's Name'
            </th>
            <th>Student Email</th>
            <th>
                Student DOB
            </th>
            <th>
                Student Group
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td>
                    No Results Found
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {

            <tr>
                <td>
                    @item.studentFname @item.studentLname
                </td>
                <td>
                    @item.studentPname
                </td>
                <td>
                    @item.studentEmail
                </td>
                <td>
                    @item.studentDOB
                </td>
                <td>
                    @item.studentGroup
                </td>
                <td>
                    @using (Html.BeginForm())
                    {
                        <button type="submit" name="student" value="@item.studentID" class="btn btn-danger">Terminate Student</button>
                    }
                </td>
            </tr>


            }
        }
        </tbody>

</table>
}

