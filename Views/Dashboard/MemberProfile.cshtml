
@{
    ViewBag.Title = "LeaderProfile";
    Layout = "~/Views/Layouts/_EmptyLayout.cshtml";
}

<h2>Edit Your Profile Details</h2>
@using (Html.BeginForm())
{
    <div class="container-fluid">
        <div class="row">
            @foreach (var su in ViewData["mydetails"] as IEnumerable<TheFinalProduct_FYP_.db_fypManagement.tblStudents>)
            {
                <div class="col-md-12 card p-4">
                    <h5 class="p-0 mt-1">First Name: </h5> <input type="text" class="form-control" name="firstname"  value="@su.studentFname" />
                    <h5 class="p-0 mt-1">Last Name: </h5>  <input type="text" class="form-control" name="lastname" value="@su.studentLname" />
                    <h5 class="p-0 mt-1">Father's Name: </h5>   <input type="text" class="form-control" name="fathername" value="@su.studentPname" />
                    <h5 class="p-0 mt-1">Email Address: </h5>    <input type="text" class="form-control" name="email" value="@su.studentEmail" />
                    <h5 class="p-0 mt-1">Password: </h5>    <input type="text" class="form-control" name="password" value="@su.studentPassword" />
                    <h5 class="p-0 mt-1">Date of Birth: @su.studentDOB</h5>   <input type="date" class="datepicker" name="dob" value="@su.studentDOB" />
                </div>
            }
            <input type="submit" class="btn btn-lg btn-success mt-3" onclick="success()" value="Save Changes" />
        </div>

    </div>
}
<script>
    function success() {
        alert("Profile Updated Successfully!!!");
    }
</script>